            <TextBlock x:Name="txt_WCSReplyTaskId" Style="{DynamicResource labStyle}" Text="未获取" TextWrapping="Wrap" />
        </StackPanel>

        <StackPanel Grid.Row="5" Grid.Column="0" HorizontalAlignment="Center">
